<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/register"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/md_theme_light_primary"
    tools:context=".register.RegisterActivity">

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="68dp"
        android:gravity="top"
        android:lineSpacingExtra="2sp"
        android:text="@string/register"
        android:textAppearance="@style/register"
        android:translationY="-1.11sp" />

    <TextView
        android:id="@+id/selamat_dat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="108dp"
        android:gravity="top"
        android:lineSpacingExtra="-5sp"
        android:text="@string/selamat_dat"
        android:textAppearance="@style/selamat_dat" />

    <com.google.android.material.textfield.TextInputLayout
        style="?attr/textInputFilledStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/label"
        android:width="380dp"
        android:height="56dp"
        android:viewportWidth="380"
        android:viewportHeight="56"
        android:strokeWidth="2"
        android:strokeColor="@color/md_theme_light_onBackground"
        android:fillColor="@color/md_theme_light_background"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="-355dp"
        app:startIconDrawable="@drawable/ic_baseline_person_24">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:viewportWidth="380"
            android:viewportHeight="56" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="?attr/textInputFilledStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/label_email"
        android:width="380dp"
        android:height="56dp"
        android:viewportWidth="380"
        android:viewportHeight="56"
        android:strokeWidth="2"
        android:strokeColor="@color/md_theme_light_onBackground"
        android:fillColor="@color/md_theme_light_background"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="270dp"
        android:layout_marginBottom="-355dp"
        app:startIconDrawable="@drawable/ic_baseline_email_24">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_email"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:viewportWidth="380"
            android:viewportHeight="56" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="?attr/textInputFilledStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/label_password"
        android:width="380dp"
        android:height="56dp"
        android:viewportWidth="380"
        android:viewportHeight="56"
        android:strokeWidth="2"
        android:strokeColor="@color/md_theme_light_onBackground"
        android:fillColor="@color/md_theme_light_background"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="340dp"
        android:layout_marginBottom="-355dp"
        app:startIconDrawable="@drawable/ic_baseline_lock_24"
        app:endIconMode="password_toggle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_password"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:viewportWidth="380"
            android:viewportHeight="56"
            app:passwordToggleEnabled="false"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_register"
        style="@style/Widget.Material3.Button.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="@color/md_theme_light_background"
        android:text="@string/register"
        android:textColor="@color/md_theme_light_onBackground" />

    <Button
        android:id="@+id/btn_to_login"
        style="@style/Widget.Material3.Button.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="470dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="@color/md_theme_light_background"
        android:text="@string/back_login"
        android:textColor="@color/md_theme_light_onBackground" />

</RelativeLayout>